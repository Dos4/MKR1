using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MKR1
{
    class Program
    {
        static void Main(string[] args) // в функції main виводимо на екран масив, та функії знаходження
        {
            int[] arr = GetArr();

            foreach (var item in arr)
            {
                Console.Write($"{item} ");
            }

            Console.WriteLine();

            Console.WriteLine(Min(arr));
            Console.WriteLine(Max(arr));
            Console.WriteLine(Avg(arr));
        }

        static int Min(int[] arr) // знаходимо мінімальне значення
        {
            int min = 0;

            foreach (var item in arr)
            {
                if (item < min)
                {
                    min = item;
                }
            }

            return min;
        }

        static int Max(int[] arr) // знаходимо максимальне значення
        {
            int max = 0;

            foreach (var item in arr)
            {
                if (item > max)
                {
                    max = item;
                }
            }

            return max;
        }

        static float Avg(int[] arr) // знаходимо середнє арифметичне 
        {
            int sum = 0;

            foreach (var item in arr)
            {
                sum += item;
            }

            float avg = sum / arr.Length;

            return avg;
        }

        static int[] GetArr() // заповнюємо масив випадковими числами
        {
            Random random = new Random();
            int[] arr = new int[10];

            for (int i = 0; i < arr.Length; i++)
            {
                arr[i] = random.Next(-100, 100);
            }

            return arr;
        }

    

    }
}
